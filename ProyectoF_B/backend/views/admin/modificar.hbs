<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/productos/modificar" method="post">
                <input type="hidden" value="{{productos.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form.control" name="tiutlo" value="{{productos.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{productos.subtitulo}}">
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{producto.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn_primary">Modificar</button>
            </form>
        </div>
    </div>
</div>