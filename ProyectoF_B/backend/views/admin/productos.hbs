<div class="container" style="margin_top: 50px;">
    <div class="row">
        <p class="text-end"> Hola {{persona}} <a class="btn btn-danger" hrfe="/admin/login/logout">Cerrar sesion<i
                    class="fas fa-sign-out-alt"></i></a></p>

    </div>

    {{! fila 2}}

    <div class="row">
        <div class="col-7">
            <h3>Listado de productos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/productos/agregar"><i class="fa fa-plus" aria-hidden="true"></i>nuevo</a>
        </div>
    </div>

    {{!fin fila 2}}

    {{!fila 3}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{Imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" href="/admin/productos/modificar/{{id}}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" href="/admin/productos/eliminar/{{id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    {{!fin fila 3}}

</div>